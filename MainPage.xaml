<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Papierflieger.MainPage">

    <Grid Margin="15" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto">
        <Label Margin="5" Text="Name"/>
        <Entry Grid.Row="1" x:Name="Name"
       Placeholder="Name"/>
        <Label Margin="5"  Grid.Row="2" Text="Reichweite"/>
        <Entry Grid.Row="3" x:Name="Reichweite"
       Placeholder="Reichweite"/>
        <Button Margin="5" Grid.Row="4" BackgroundColor="Gray"
        Text="Hinzufügen"/>
        <Button Margin="5" Grid.Row="5" BackgroundColor="Gray" Text="alle löschen"/>

    </Grid>
</ContentPage>
